// Verificar que el schema tenga los campos correctos
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  googleId  String   @unique
  email     String   @unique
  name      String
  avatarUrl String?  // ✅ Campo opcional para avatar
  bio       String?  // ✅ Campo opcional para biografía

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt  // ✅ Campo de actualización automática

  messages  Message[]
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  text      String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @db.ObjectId
}

